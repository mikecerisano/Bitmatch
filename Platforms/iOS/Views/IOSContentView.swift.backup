// IOSContentView.swift - iPad interface using shared architecture
import SwiftUI

struct IOSContentView: View {
    @StateObject private var coordinator = SharedAppCoordinator()
    @State private var selectedMode: AppMode = .copyAndVerify
    
    var body: some View {
        NavigationView {
            ZStack {
                // Background
                LinearGradient(
                    gradient: Gradient(colors: [Color.black, Color.gray.opacity(0.8)]),
                    startPoint: .topLeading,
                    endPoint: .bottomTrailing
                )
                .ignoresSafeArea()
                
                // Main content
                HStack(spacing: 0) {
                    // Left sidebar
                    VStack(alignment: .leading, spacing: 24) {
                        // Mode selection
                        VStack(alignment: .leading, spacing: 16) {
                            Text("BitMatch")
                                .font(.title)
                                .fontWeight(.bold)
                                .foregroundColor(.white)
                            
                            Text("Professional File Transfer & Verification")
                                .font(.caption)
                                .foregroundColor(.gray)
                            
                            // Mode picker (only show supported modes on iPad)
                            VStack(alignment: .leading, spacing: 12) {
                                ForEach(AppMode.supportedModes, id: \.id) { mode in
                                    ModeButton(
                                        mode: mode,
                                        isSelected: coordinator.currentMode == mode
                                    ) {
                                        coordinator.currentMode = mode
                                    }
                                }
                            }
                        }
                        
                        Spacer()
                        
                        // Status information
                        if coordinator.isOperationInProgress {
                            OperationStatusView(coordinator: coordinator)
                        }
                        
                    }
                    .padding(.horizontal, 24)
                    .padding(.vertical, 32)
                    .frame(width: 320)
                    .background(Color.black.opacity(0.6))
                    
                    // Main content area
                    VStack {
                        switch coordinator.currentMode {
                        case .copyAndVerify:
                            CopyAndVerifyView(coordinator: coordinator)
                        case .compareFolders:
                            CompareFoldersView(coordinator: coordinator)
                        case .masterReport:
                            MasterReportView(coordinator: coordinator)
                        }
                    }
                    .frame(maxWidth: .infinity, maxHeight: .infinity)
                    .background(Color.black.opacity(0.2))
                }
            }
        }
        .navigationViewStyle(StackNavigationViewStyle())
    }
}

// MARK: - Mode Button
struct ModeButton: View {
    let mode: AppMode
    let isSelected: Bool
    let action: () -> Void
    
    var body: some View {
        Button(action: action) {
            HStack(spacing: 12) {
                Image(systemName: mode.systemImage)
                    .foregroundColor(isSelected ? .blue : .gray)
                    .frame(width: 20)
                
                VStack(alignment: .leading, spacing: 2) {
                    Text(mode.rawValue)
                        .font(.headline)
                        .foregroundColor(isSelected ? .white : .gray)
                    
                    Text(mode.description)
                        .font(.caption)
                        .foregroundColor(.gray)
                        .multilineTextAlignment(.leading)
                }
                
                Spacer()
            }
            .padding(.horizontal, 16)
            .padding(.vertical, 12)
            .background(
                RoundedRectangle(cornerRadius: 8)
                    .fill(isSelected ? Color.blue.opacity(0.2) : Color.clear)
            )
            .overlay(
                RoundedRectangle(cornerRadius: 8)
                    .stroke(isSelected ? Color.blue : Color.gray.opacity(0.3), lineWidth: 1)
            )
        }
        .buttonStyle(PlainButtonStyle())
    }
}

// MARK: - Operation Status View
struct OperationStatusView: View {
    @ObservedObject var coordinator: SharedAppCoordinator
    
    var body: some View {
        VStack(alignment: .leading, spacing: 12) {
            Text("Operation Status")
                .font(.headline)
                .foregroundColor(.white)
            
            VStack(alignment: .leading, spacing: 8) {
                Text(coordinator.currentStage.displayName)
                    .font(.subheadline)
                    .foregroundColor(.gray)
                
                ProgressView(value: coordinator.progressPercentage)
                    .progressViewStyle(LinearProgressViewStyle(tint: .blue))
                
                HStack {
                    Text("\(Int(coordinator.progressPercentage * 100))%")
                        .font(.caption)
                        .foregroundColor(.gray)
                    
                    Spacer()
                    
                    if let speed = coordinator.formattedSpeed {
                        Text(speed)
                            .font(.caption)
                            .foregroundColor(.gray)
                    }
                }
                
                if let timeRemaining = coordinator.formattedTimeRemaining {
                    Text("~\(timeRemaining) remaining")
                        .font(.caption)
                        .foregroundColor(.gray)
                }
            }
        }
        .padding(16)
        .background(
            RoundedRectangle(cornerRadius: 8)
                .fill(Color.black.opacity(0.4))
        )
    }
}

// MARK: - Copy and Verify View
struct CopyAndVerifyView: View {
    @ObservedObject var coordinator: SharedAppCoordinator
    
    var body: some View {
        VStack(spacing: 32) {
            // Header
            VStack(spacing: 8) {
                Text("Copy & Verify")
                    .font(.largeTitle)
                    .fontWeight(.bold)
                    .foregroundColor(.white)
                
                Text("Copy files to multiple destinations with integrity verification")
                    .font(.subheadline)
                    .foregroundColor(.gray)
                    .multilineTextAlignment(.center)
            }
            
            // File selection
            VStack(spacing: 24) {
                // Source selection
                FileSelectionCard(
                    title: "Source Folder",
                    subtitle: "Select folder to copy from",
                    url: coordinator.sourceURL,
                    action: { await coordinator.selectSourceFolder() }
                )
                
                // Destination selection
                VStack(alignment: .leading, spacing: 12) {
                    HStack {
                        Text("Destination Folders")
                            .font(.headline)
                            .foregroundColor(.white)
                        
                        Spacer()
                        
                        Button("Add Destination") {
                            Task { await coordinator.addDestinationFolder() }
                        }
                        .buttonStyle(SecondaryButtonStyle())
                    }
                    
                    if coordinator.destinationURLs.isEmpty {
                        Text("No destinations selected")
                            .font(.subheadline)
                            .foregroundColor(.gray)
                    } else {
                        ForEach(coordinator.destinationURLs, id: \.self) { url in
                            DestinationRow(
                                url: url,
                                onRemove: { coordinator.removeDestinationFolder(url) }
                            )
                        }
                    }
                }
            }
            
            // Settings
            SettingsPanel(coordinator: coordinator)
            
            Spacer()
            
            // Action buttons
            HStack(spacing: 16) {
                if coordinator.isOperationInProgress {
                    Button("Cancel") {
                        coordinator.cancelOperation()
                    }
                    .buttonStyle(SecondaryButtonStyle())
                    
                    Button("Pause") {
                        coordinator.pauseOperation()
                    }
                    .buttonStyle(SecondaryButtonStyle())
                } else {
                    Button("Start Operation") {
                        Task { await coordinator.startOperation() }
                    }
                    .buttonStyle(PrimaryButtonStyle())
                    .disabled(!coordinator.canStartOperation)
                }
            }
            .padding(.bottom, 32)
        }
        .padding(32)
    }
}

// MARK: - File Selection Card
struct FileSelectionCard: View {
    let title: String
    let subtitle: String
    let url: URL?
    let action: () async -> Void
    
    var body: some View {
        Button {
            Task { await action() }
        } label: {
            VStack(alignment: .leading, spacing: 12) {
                HStack {
                    VStack(alignment: .leading, spacing: 4) {
                        Text(title)
                            .font(.headline)
                            .foregroundColor(.white)
                        
                        Text(subtitle)
                            .font(.caption)
                            .foregroundColor(.gray)
                    }
                    
                    Spacer()
                    
                    Image(systemName: url == nil ? "folder" : "checkmark.circle.fill")
                        .foregroundColor(url == nil ? .gray : .green)
                }
                
                if let url = url {
                    Text(url.lastPathComponent)
                        .font(.subheadline)
                        .foregroundColor(.blue)
                        .multilineTextAlignment(.leading)
                }
            }
            .padding(20)
            .frame(maxWidth: .infinity, alignment: .leading)
            .background(
                RoundedRectangle(cornerRadius: 12)
                    .fill(Color.black.opacity(0.3))
            )
            .overlay(
                RoundedRectangle(cornerRadius: 12)
                    .stroke(url == nil ? Color.gray.opacity(0.3) : Color.green, lineWidth: 1)
            )
        }
        .buttonStyle(PlainButtonStyle())
    }
}

// MARK: - Settings Panel
struct SettingsPanel: View {
    @ObservedObject var coordinator: SharedAppCoordinator
    
    var body: some View {
        VStack(alignment: .leading, spacing: 16) {
            Text("Verification Settings")
                .font(.headline)
                .foregroundColor(.white)
            
            Picker("Verification Mode", selection: $coordinator.verificationMode) {
                ForEach(VerificationMode.allCases, id: \.id) { mode in
                    VStack(alignment: .leading) {
                        Text(mode.rawValue)
                        Text(mode.description)
                            .font(.caption)
                            .foregroundColor(.gray)
                    }
                    .tag(mode)
                }
            }
            .pickerStyle(SegmentedPickerStyle())
        }
        .padding(20)
        .background(
            RoundedRectangle(cornerRadius: 12)
                .fill(Color.black.opacity(0.3))
        )
    }
}

// MARK: - Destination Row
struct DestinationRow: View {
    let url: URL
    let onRemove: () -> Void
    
    var body: some View {
        HStack {
            Image(systemName: "folder.fill")
                .foregroundColor(.blue)
            
            Text(url.lastPathComponent)
                .foregroundColor(.white)
            
            Spacer()
            
            Button("Remove") {
                onRemove()
            }
            .buttonStyle(SecondaryButtonStyle())
        }
        .padding(12)
        .background(
            RoundedRectangle(cornerRadius: 8)
                .fill(Color.black.opacity(0.2))
        )
    }
}

